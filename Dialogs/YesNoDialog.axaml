<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HellDivers2OneKeyStratagem"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="HellDivers2OneKeyStratagem.YesNoDialog"
        TransparencyLevelHint="AcrylicBlur"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">

    <StackPanel>
        <local:MyHorizontalBlock>
            <Label Name="MessageLabel" />
        </local:MyHorizontalBlock>
        <StackPanel Orientation="Horizontal" Spacing="10">
            <Button Name="YesButton" Content="是" Click="YesButton_OnClick" />
            <Button Name="NoButton" Content="否" Click="NoButton_OnClick" />
        </StackPanel>
    </StackPanel>
</Window>