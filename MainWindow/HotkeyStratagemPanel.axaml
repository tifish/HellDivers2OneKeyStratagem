<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:HellDivers2OneKeyStratagem">

    <Design.PreviewWith>
        <controls:HotkeyStratagemPanel />
    </Design.PreviewWith>

    <Style Selector="controls|HotkeyStratagemPanel">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>

                <Border Name="Border" BorderThickness="1" Padding="5" BorderBrush="{TemplateBinding BorderBrush}">
                    <StackPanel MinWidth="64" Background="Transparent">
                        <Label Content="{TemplateBinding HotkeyName}" HorizontalAlignment="Center" />
                        <Label Content="{TemplateBinding StratagemName}" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>

            </ControlTemplate>
        </Setter>
    </Style>
</Styles>